                                    <% } %>

                                        <span
                                            class="absolute top-4 left-4 bg-green-600 text-white text-xs font-semibold px-3 py-1 rounded">Featured</span>
                                        <span
                                            class="absolute top-4 right-4 bg-red-500 text-white text-xs font-semibold px-3 py-1 rounded">
                                            <%= event.eventType %>
                                        </span>
                            </div>

                            <div class="p-6">
                                <h3 class="font-serif text-xl font-bold mb-1">
                                    <%= event.title %>
                                </h3>

                                <!-- Location -->
                                <p class="flex items-center gap-2 text-gray-500 mb-3">
