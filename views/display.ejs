                                    data-title="<%= event.title %>" data-description="<%= event.description %>"
                                    data-time="<%= event.startTime %> | <%= event.endTime %>"
                                    data-attendance="<%= event.expectedAttendance %>"
                                    data-location="<%= event.location %>"
                                    data-date="<%= event.eventDate.toDateString() %>"
                                    data-website="<%= event.website %>" data-contactemail="<%= event.contactEmail %>"
                                    data-contactphone="<%= event.contactPhone %>">
                                    <i class="bi bi-eyeglasses"></i> View Details
                                </button>

                                </button>
                            </div>
                        </div>

                        <% }) %>
                            <% } else { %>
                                <p>No events found.</p>
                                <% } %>

                                    <!-- Repeat similar cards for other events -->
            </div>
        </div>
    </section>


    <!-- Modal -->
    <div id="eventModalBox" class=" fixed inset-0 flex items-center justify-center bg-black/70 hidden z-50">
        <div
            class="bg-gray-900 border border-green-800 rounded-xl shadow-xl max-w-4xl w-full mx-4 overflow-y-auto max-h-[90vh]">

            <!-- Modal Header -->
            <div class="flex justify-between items-center p-6 border-b border-green-800">
                
                <h2 id="modalTitle" class="font-serif text-2xl text-green-400"></h2>
                <button id="closeModalBtn" class="text-gray-400 hover:text-white text-2xl font-bold">&times;</button>
            </div>

            <!-- Modal Body -->
            <div class="p-6 space-y-6">

                <!-- Event Details -->
                <div>
                    <h3 class="font-serif text-xl text-green-400 mb-2">Event Details</h3>
                    <p id="modalDescription" class="text-gray-400"></p>

                    <div class="grid md:grid-cols-2 gap-6 mt-4">
